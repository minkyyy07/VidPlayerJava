<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.media.MediaView?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.vidplayer.VideoPlayerController" alignment="CENTER" spacing="10.0">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <children>
        <MediaView fx:id="mediaView" fitHeight="400.0" fitWidth="600.0" />
        <HBox spacing="10.0" alignment="CENTER">
            <children>
                <Button fx:id="openButton" mnemonicParsing="false" onAction="#openFile" text="Открыть файл" />
                <Button fx:id="playButton" mnemonicParsing="false" onAction="#playPause" text="Играть" />
                <Button fx:id="stopButton" mnemonicParsing="false" onAction="#stop" text="Стоп" />
            </children>
        </HBox>
        <HBox spacing="10.0" alignment="CENTER">
            <children>
                <Label text="Громкость:" />
                <Slider fx:id="volumeSlider" max="1.0" value="0.5" prefWidth="100" />
                <Label fx:id="timeLabel" text="00:00 / 00:00" />
            </children>
        </HBox>
        <Slider fx:id="timeSlider" prefWidth="600" HBox.hgrow="ALWAYS" />
    </children>
</VBox>

